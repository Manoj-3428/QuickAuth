rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - allow read/write for authenticated users
    match /users/{userId} {
      // Allow users to read/write their own data
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Allow querying by email for sign-in process (temporary for demo)
      allow read: if request.auth != null;
    }
    
    // For development/testing - more permissive rules
    // TODO: Make these more restrictive for production
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
